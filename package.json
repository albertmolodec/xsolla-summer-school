{
  "name": "xsolla-summer-school",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": "6.4.1",
    "node": "8.11.4"
  },
  "dependencies": {
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^1.1.5"
  },
  "devDependencies": {
    "babel-preset-airbnb": "^2.6.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.0",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^6.0.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-nested": "^3.0.0",
    "postcss-simple-vars": "^4.1.0",
    "prettier": "1.14.2",
    "stylelint-config-standard": "^18.2.0"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ],
    "src/**/*.{scss,css}": [
      "stylelint --config=.stylelintrc --fix",
      "prettier --config .prettierrc --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "npm-run-all -p watch:css start-js",
    "start-js": "react-scripts start",
    "build": "npm-run-all build:css build-js",
    "build-js": "react-scripts build",
    "test": "react-scripts test --env=jsdom --modulePaths=src",
    "eject": "react-scripts eject",
    "postinstall": "react-scripts build",
    "build:css": "postcss src/app/**/*.sss --base src/app --dir src/app --ext css",
    "watch:css": "postcss src/app/**/*.sss --base src/app --dir src/app --ext css -w",
    "test:lint:js": "eslint --ext=js --ext=jsx .",
    "test:lint:scss": "stylelint --config=.stylelintrc '**/*.scss'",
    "test:lint": "run-s test:lint:**",
    "test:unit": "react-scripts test --env=jsdom",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check"
  }
}
